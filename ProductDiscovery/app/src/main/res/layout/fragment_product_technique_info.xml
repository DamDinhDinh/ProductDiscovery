<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="vm"
            type="dd.dinh.productdiscovery.viewmodel.concrete.ProductDetailViewModel" />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/line_info_backgroud_grey"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/coolGrey"
                android:text="@string/product_brand_hint"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"/>

            <TextView
                android:id="@+id/tvProductBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/darkGrey"
                android:text="@{vm.getProduct().brand}"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/coolGrey"
                android:text="@string/product_warranty_hint"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"/>

            <TextView
                android:id="@+id/tvProductWarranty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/darkGrey"
                android:text="36 tháng"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/line_info_backgroud_grey"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/coolGrey"
                android:text="@string/product_wattage"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"/>

            <TextView
                android:id="@+id/tvProductWattage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/darkGrey"
                android:text="140W"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/coolGrey"
                android:text="@string/product_cache_hint"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"/>

            <TextView
                android:id="@+id/tvProductCache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/darkGrey"
                android:text="8.25MB"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"/>

        </RelativeLayout>

    </LinearLayout>

</layout>